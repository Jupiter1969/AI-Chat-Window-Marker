{
  "manifest_version": 3,
  "name": "AI 回复标记",
  "version": "1.1",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://chatgpt.com/*",
    "https://www.deepseek.com/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.deepseek.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
